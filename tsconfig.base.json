{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2018",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@repository/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/static",
    "**/public",
    "**/build",
    "**/out",
    "**/.next",
    "**/.deprecated",
    "**/__testUtils__"
  ]
}
