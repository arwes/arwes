{
  "root": true,
  "ignorePatterns": [
    "node_modules",
    "packages/*/lib",
    "playground/dist",
    "__deprecated__"
  ],
  "extends": [
    "standard",
    "standard-jsx",
    "standard-react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true
  },
  "rules": {
    "semi": ["error", "always"],
    "brace-style": ["error", "stroustrup"],
    "react/prop-types": [0]
  }
}
